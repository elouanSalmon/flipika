rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Media folder with strict validation (WebP < 200KB)
    match /users/{userId}/media/{imageId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 200 * 1024 // Max 200KB
                   && request.resource.contentType == 'image/webp';
    }

    // Default rule for other files in user directory
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
